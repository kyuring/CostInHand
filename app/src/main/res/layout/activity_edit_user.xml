<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditUserActivity"
    android:orientation="vertical"
    android:background="@color/lightGray">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="bottom|center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_user_title"
            android:text="가게 정보 수정중..."
            android:textColor="@color/green"
            android:textStyle="bold"
            android:textSize="15dp"/>
    </LinearLayout>
    <!-- 아이디 -->
    <LinearLayout
        android:background="@drawable/linearlayout_round"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:layout_marginHorizontal="20dp">
        <TextView
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_remove_text"
            android:gravity="center"
            android:text=""
            android:textColor="@color/title"
            android:textSize="15dp"/>
        <LinearLayout
            android:id="@+id/Linear_id"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_marginTop="6dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="아이디 "
                android:textColor="@color/green"/>
            <EditText
                android:layout_marginLeft="10dp"
                android:textColorHint="@color/gray"
                android:textColor="@color/title"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTint="@color/green"
                android:enabled="false"
                android:textSize="15sp"
                android:gravity="center"
                android:id="@+id/userID"
                android:backgroundTint="@color/green" />
        </LinearLayout>
        <!-- 이메일 -->
        <LinearLayout
            android:id="@+id/Linear_email"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_marginTop="6dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textColor="@color/green"/>

            <EditText
                android:layout_marginLeft="10dp"
                android:textColorHint="@color/gray"
                android:textColor="@color/title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="example@example.com"
                android:drawableTint="@color/green"
                android:textSize="15sp"
                android:gravity="center"
                android:id="@+id/userMail"
                android:backgroundTint="@color/green"/>
        </LinearLayout>
        <!-- 기존 비밀번호 -->
        <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/Linear_password"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_marginTop="6dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textColor="@color/green"/>

            <EditText
                android:layout_marginLeft="10dp"
                android:textColorHint="@color/gray"
                android:textColor="@color/title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="비밀번호"
                android:drawableTint="@color/green"
                android:textSize="15sp"
                android:gravity="center"
                android:id="@+id/originPassword"
                android:backgroundTint="@color/green"/>
        </LinearLayout>
        <!--   새 비밀번호    -->
        <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/Linear_newPassword"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="6dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="새비밀번호"
                android:textColor="@color/green"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:textColorHint="@color/gray"
                    android:textColor="@color/title"
                    android:textSize="15sp"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green"
                    android:hint="새비밀번호"
                    android:gravity="center"
                    android:id="@+id/newPassword"/>
                <EditText
                    android:textColorHint="@color/gray"
                    android:textColor="@color/title"
                    android:textSize="15sp"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green"
                    android:layout_marginTop="7dp"
                    android:hint="비밀번호 확인"
                    android:gravity="center"
                    android:id="@+id/newPasswordCheck"/>
            </LinearLayout>
        </LinearLayout>
        <!-- 가게이름 -->
        <LinearLayout
            android:id="@+id/Linear_storeName"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_marginTop="6dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="가게이름 "
                android:textColor="@color/green"/>
            <EditText
                android:layout_marginLeft="10dp"
                android:textColorHint="@color/gray"
                android:textColor="@color/title"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTint="@color/green"
                android:textSize="15sp"
                android:gravity="center"
                android:id="@+id/storeName"
                android:backgroundTint="@color/green" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/button_editUser_cancel"
            android:layout_height="match_parent"
            android:background="@drawable/buttonshape"
            android:text="취소"
            android:layout_margin="5dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/button_editUser_ok"
            android:background="@drawable/buttonshape"
            android:text="확인"/>
    </LinearLayout>
</LinearLayout>